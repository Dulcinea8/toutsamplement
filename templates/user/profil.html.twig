{% extends 'layout.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block titlepage %}Ton Profil{% endblock %}

{% block content %}

    {# pour afficher tous type de messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-12">
            <div class="d-flex d-flex flex-column justify-content-center align-items-center">
                {% if user.avatar %}

                    <img class="card-img-top" class="img-fluid" style="width: 220px; height: 220px;" src="{{asset(image_directory)}}{{user.avatar}}" alt="" />

                {% endif %}
                <br>
                <br>

                        {% if user.score <= 10 %}
                            <img class="" style="width: 120px; height: 120px;" src="{{ asset('images/score_debutant.png')  }}" alt="score" />
                            <br>
                            <h6>Niveau Debutant</h6>
                        {% endif %}
                        {% if user.score > 10 and user.score <=20 %}
                            <img class="img-fluid" style="width: 120px; height: 120px;" src="{{ asset('images/sore_bronze.png')  }}" alt="score" />
                            <br>
                            <h6>Niveau Bronze</h6>
                        {% endif %}
                        {% if user.score > 20 and user.score <=30 %}
                            <img class="img-fluid"  style="width: 120px; height: 120px;" src="{{ asset('images/score_silver.png')  }}" alt="score" />
                            <br>
                            <h6>Niveau Silver</h6>
                        {% endif %}
                        {% if user.score > 30  %}
                            <img class="img-fluid"  style="width: 120px; height: 120px;" src="{{ asset('images/score_gold.png')  }}" alt="score" />
                            <br>
                            <h6>Niveau Gold</h6>
                        {% endif %}
                        <p class="card-title"><strong>Score: </strong>{{ user.score }}</p>

            </div>
        </div>
        <div class="col-md-6 col-12">
            <h6><strong>Pseudo:</strong> {{ user.username }}</h6>
            <h6><strong>Nom:</strong> {{ user.nom }}</h6>
            <h6><strong>Prenom:</strong> {{ user.prenom }}</h6>
            <h6><strong>Email:</strong> {{ user.email }}</h6>
            <h6><strong>Date d'inscription:</strong> {{ user.dateinscription  |date('d/m/Y') }}</h6>
            <h6><strong>Ta Biographie</strong> {{ user.bio }}</h6>
            <h5><strong>Tes Liens: </strong></h5>
            <h6><strong>Soundcloud: </strong> {{ user.soundcloud }}</h6>
            <h6><strong>Bandcamp: </strong> {{ user.bandcamp }}</h6>
            <h6><strong>Facebook: </strong> {{ user.facebook }}</h6>
            <h6><strong>Site Web: </strong> {{ user.siteweb }}</h6>
            <br>
            <br>
            <div>
                <button class="btn btn-link">  <a  href="{{ path ('update_profil', { id: user.id}) }}">Modifier mon Profil</a></button>
            </div>
            <div>
               {#<button class="btn btn-link">  <a href="{{ path ('delete_profil', { id: user.id}) }}">Supprimer mon Profil</a></button>#}
            </div>


        </div>
    </div>
    <h4>Contributions</h4>

    <!--Affiche les samples qui la personne a publiÃ© -->
    <div class="d-flex" style="height:100px;">

        {% for sample in user.samples %}

            <article class="container text-center">

                <div class="p-3 bg-light m-1 border border-secondary">

                    <div class="m-1 ">

                        {% if sample.sampleur.titre|length >= 15 %}
                            <a href="">
                                <p class="font-weight-bold text-dark">{{ sample.sampleur.idalbum.titre | striptags | slice(0, 15) }}...</p>
                            </a>
                        {% elseif sample.sampleur.titre|length < 15 %}
                            <a href="">
                                <p class="font-weight-bold text-dark">{{ sample.sampleur.titre }}</p>
                            </a>
                        {% endif %}

                        {% if sample.sampleur.idalbum.pochette %}
                            <a href="">
                                <img class="zoom img-fluid w-75 text-dark" src="{{ asset(image_directory ~ sample.sampleur.idalbum.pochette) }}"  alt=""/>
                            </a>
                        {% endif %}

                    </div>

                <div class="m-2">

                    {% if sample.original.titre|length >= 15 %}
                        <a href="">
                            <p class="font-weight-bold text-dark ">{{ sample.original.titre | striptags | slice(0, 15) }}...</p>
                        </a>
                    {% elseif sample.original.titre|length < 15 %}
                        <a href="">
                            <p class="font-weight-bold text-dark">{{ sample.original.titre }}</p>
                        </a>
                    {% endif %}

                    {% if sample.original.idalbum.pochette %}
                        <a href="">
                            <img class="zoom img-fluid w-75" src="{{ asset(image_directory ~ sample.original.idalbum.pochette) }}"  alt=""/>
                        </a>
                    {% endif %}

                </div>

                </div>
        </article>

        {% endfor %}

    </div>

</div>


{% endblock %}