{% extends 'layout.html.twig' %}

{% block title %}Fiche article{% endblock %}

{% block titlepage %}{{ article.titre }}{% endblock %}

{% block content %}


    {# a chaque tour de boucle, opn recupere articles qui ici est un objet pour acceder au titre artcile.title #}

    <article class="container text-center alert alert-info">

        Publi√© par :
            <a href="{{ path('profil', {id: article.id} ) }}">{{ article.auteurid.username }}</a>

        le
            {{ article.datepubli|date('d/m/Y') }}

        <br>
                <a class="btn btn-warning" href="{{ path('admin-modifier-article', {id: article.id} ) }}">Modifier</a>
                <a class="btn btn-warning" href="{{ path('admin-supprimer-article', {id: article.id} ) }}">Delete</a>

        <div class="mt-3">

        </div>
        <br>

        {% if article.image %}
            <img class="img-fluid" src="{{ asset(image_directory ~ article.image) }}"  alt=""/>
        {% endif %}
        <hr>
        {{ article.content }}


        <hr>
        {% if article.video %}
            <iframe width="560" height="315" src="{{ asset(video_directory ~ article.video) }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        {% endif %}



   
    </article>


    
    
{% endblock %}
