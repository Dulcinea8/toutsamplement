{% extends 'layout.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block titlepage %}Nos derniers articles{% endblock %}

{% block content %}

    <div  class="container">

        <hr class="bg-danger">

        <div class="row d-flex justify-content-center">

            {# equivalent twig de la boucle foreach #}
            <div class="col-10">
                {# equivalent twig de la boucle foreach #}
                {% for article in articles %}

                    {# a chaque tour de boucle, on recupere les articles qui ici est un objet
                    pour acceder au titre artcile.title #}
                    <article class="container text-justify ">

                        <h2 class="font-weight-bold">{{ article.titre }}</h2>
                        <br>
                        <div class="row ">
                            <div class="col-6">
                                {% if article.image %}
                                    <img class="img-fluid w-50" src="{{ asset(image_directory ~ article.image) }}"  alt=""/>
                                {% endif %}
                            </div>

                            <div class="col-6 align-self-center">
                                {{ article.content | striptags | slice(0, 300) }}...
                                <a class="text-danger float-bottom " href="{{ path('detail-article', {id: article.id} ) }}">Lire la suite</a>
                            </div>
                        </div>

                    </article>

                    <hr>

                {% endfor %}

            </div>
        </div>

    </div>






{% endblock %}