{% extends 'layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
<h1>Contact</h1>
	
	{% if success %}<div class="alert alert-success">{{success}}</div>{%endif%}
	{% if error %}<div class="alert alert-warning">{{error}}</div>{%endif%}
	<div>
		<form action="{{ path('contact') }}" method="post">
			<div class="form-group">
				<label for="nom">Nom :</label>
				<input class="form-control" type="text" name="nom" placeholder="Votre nom">
			</div>
			<hr>
			<div class="form-group">
				<label for="email">Email :</label>
				<input class="form-control" type="email" name="email" placeholder="Votre email">
			</div>
			<hr>
			<div class="form-group">
				<label for="sujet">Sujet :</label>
				<input class="form-control" type="text" name="sujet" placeholder="Sujet du message">
			</div>
			<hr>
			<div class="form-group">
				<label for="message">Message :</label>
				<textarea class="form-control" name="message" placeholder="Votre message"></textarea>
			</div>
			<hr>
				<button type="submit" class="btn btn-default">Envoyer</button>
		</form>
	</div>


{% endblock %}

