{% extends 'layout.html.twig' %}

{% block title %}Login {% endblock %}

{% block content %}

    {#affichage des messages d'erreurs le cas échéant #}
    {% if error %}
        <div>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}


    {# pour afficher tous type de messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}



    <div class="d-flex justify-content-center">


        <div class="card" style="width: 30rem; margin: 50px; padding: 30px;">
            <div class="card-body" >
                <h5 class="card-title" style="text-align: center;font-weight: bold;">SIGN IN</h5>
                {# le formulaire de login #}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                </form>
                    <div style="text-align: center">
                        <form action="{{ path('register') }}" method="post">
                            <button type="submit"  name="" class="btn btn-outline-primary btn-lg btn-block">CREER UN COMPTE</button>
                        </form>
                        <form action="" method="post">
                            <button type="submit" class="btn btn-link align-items-center">Mot de passe oublié?</button>
                        </form>
                    </div>


            </div>
        </div>




    </div>
{% endblock %}