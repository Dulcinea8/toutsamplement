    {% extends 'layout.html.twig' %}

{% block title %}Login {% endblock %}
{% block titlepage %}Se Connecter {% endblock %}

{% block content %}

    {#affichage des messages d'erreurs le cas échéant#}
    {% if error %}
        <div class="alert alert-warning" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}


    {# pour afficher tous type de messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}



    <div class="d-flex justify-content-center">


        <div class="card col-12 col-md-6" style="width: 30rem; margin: 50px; padding: 30px;">
            <div class="card-body" >
                <!-- <h2 class="card-title iceland" style="text-align: center;font-weight: bold;">Se Connecter</h2> -->
                {# le formulaire de login #}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username" class="">Pseudo</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Pseudo">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe">
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg btn-block">Login</button>
                </form>
                    <div style="text-align: center" class="mt-2">
                        <form action="{{ path('register') }}" method="post">
                            <button type="submit"  name="" class="btn btn-outline-warning btn-lg btn-block" >S'enregistrer</button>
                        </form>

                        <form action="{{ path('reset-password') }}" method="post">
                            <button type="submit" class="btn btn-link align-items-center">Mot de passe oublié?</button>
                        </form>
                    </div>


            </div>
        </div>




    </div>
{% endblock %}