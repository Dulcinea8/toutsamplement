    {#//ici je fait la requete Ajax pour le moteur de recherche de mon menu#}
    <script>
        $(function () {

            $('#recherche').on('keyup', function () {

                //if ($(this).val().length > 1)
                //{

                $('#recherche').on( "mouseleave", function(){
                    ObjMenuTimeout  = setTimeout( function(){
                        $('#result').hide();
                    }, 1500 );
                });

                $('#recherche').on( "mouseenter", function(){
                    clearTimeout( ObjMenuTimeout );
                });

                 $.ajax({
                        type: 'get',
                        url: "{{path('ajax-search')}}",
                        data: "recherche=" + $(this).val(),
                        timeout: 3000,
                        dataType: 'html',
                        success: function (data) {
                            //$('#result').empty();
                            $('#result').html(data);

                            console.log(data);
                        },
                        error: function (error) {
                            console.log(error.responseText);
                        }
                    })


               // }
            })
        })
    </script>





