{% extends 'layout.html.twig' %}

{% block title %}Liste d'Albums{% endblock %}



{% block content %}

    <div class="m-4 w-65">
        <h4 class="text-center p-2">Selectionne l'album Ã  supprimer</h4>
        <ul class="list-group d-flex justify-content-center">
            {%for album in albums%}
                <a href="#" class="no-follow" data-toggle="modal" data-target="#artist-{{ album.id }}" alt="{{ album.nom }}"> <li class="list-group-item">{{ album.nom }}</li></a>
                <div class="modal fade" id="artist-{{ album.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Suppresion Album</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Vous voulez vraiment supprimer cet Album?????
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                                <form action="{{ path('album-delete', {id: album.id }) }}">
                                    <button type="submit" class="btn btn-primary">Oui</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {%endfor%}
        </ul>
    </div>

{% endblock %}

{% block js %}
    <script>
        $('.no-follow').on('click', function (e) {
            e.preventDefault();
        })


    </script>
{% endblock %}